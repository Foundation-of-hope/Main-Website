// Declare color variables
grey = rgba(128,128,130,0.38)
slategrey = #9e9ba4
hotpink = #dd3e62
trueblue = #337ab7
black = #1e1a1b
slateblack = #424242
offwhite = #F9F9F9

@font-face
  font-family: Aref Ruqaa;
  font-weight: 300;
  font-style: normal;
  
@font-face
  font-family: Harmattan;
  font-weight: 400;
  font-style: normal;

@font-face
  font-family: Raleway;
  font-weight: 400;
  font-style: normal;
  
@font-face
  font-family: Reem Kufi;
  font-weight: 400;
  font-style: normal;
  
html, body, div, p, a
  font-family Harmattan
  font-size 1.07em
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

a, .anchor
  outline none
  color #28272b
  text-decoration none
  &:hover
    color offwhite
    text-decoration: none
  &:focus
    outline none
    text-decoration: none
h1
  font-family Reem Kufi
